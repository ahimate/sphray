!===================================================!
! This is an example configuration file for Sphray. !
!===================================================!

Verbosity: 2
 
DoTestScenario: false
TestScenario: invalid

JustInit: false
Comoving: true

IsoTemp: 0.0e0
FixSnapTemp: true

IntSeed: 837374

StaticFieldSimTime: 500.00
StaticSimTimeUnit: myr

!==========================================================================!
! Input (all paths are relative to the executable and should not end in /) !
!==========================================================================!

InputType: 3

SnapPath:   ../../../data/owls/REF_L025N128/snapshot_022
SourcePath: ../../../data/owls/REF_L025N128/sources_022

SpectraFile: ../data/spectra/hm01.cdf
b2cdFile: ../data/column_depth/latmon_b2cd_table.txt
AtomicRatesFile: ../data/atomic_rates/atomic_rates.txt

ParFileBase: snap
SourceFileBase: source

StartSnapNum: 022
EndSnapNum: 022

ParFilesPerSnap: 8
SourceFilesPerSnap: 1

!=========================================================================!
! Raytracing                                                              !
!=========================================================================!

RayScheme: raynum
ForcedRayNumber: 1.e7

RayStats: false
BndryCond: 0

RecRayTol: 3.0d-1
RayPhotonTol: 1.0d-10

!=========================================================================!
! Ionization / Temperature Solving                                        !
!=========================================================================!

OnTheSpotH: true
OnTheSpotHe: true

HydrogenCaseA: false
HeliumCaseA: false

IonTempSolver: 2

Tfloor: 1.0d0
Tceiling: 1.0d9

xfloor: 0.0d0
xceiling: 1.0d0

NeBackGround: 1.0d-8

UpdateAllRays: 10000000000
RecRaysPerSrcRay: 10000000000

!=========================================================================!
! Gas Composition  (what the ray sees)                                    !
!=========================================================================!

H_mf: 1.00d0
He_mf: 0.00d0

!===========================================================================!
! Output (all paths are relative to the executable and should not end in /) !
!===========================================================================!

OutputDir: ../../../data/owls/REF_L025N128/sphray_output/22
OutputFileBase: snap

OutputType: 1

OutputTiming: standard
NumStdOuts: 5

DoInitialOutput: false
IonFracOutRays: 10000

ForcedOutFile: invalid
ForcedUnits: myr


!=========================================================================!
! Tree Building                                                           !
!=========================================================================!

PartPerCell: 12








