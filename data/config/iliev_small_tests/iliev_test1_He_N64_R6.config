!===================================================!
! This is an example configuration file for Sphray. !
!===================================================!

Verbosity: 2
 
DoTestScenario: true
TestScenario: iliev_test1He

JustInit: false
Comoving: false

IsoTemp: 1.0e4
FixSnapTemp: false

EOStemp: 1.0d4
InitxHI: -100.
RayDepletion: True

IntSeed: 837374

StaticFieldSimTime: 500.00
StaticSimTimeUnit: myr

!==========================================================================!
! Input (all paths are relative to the executable and should not end in /) !
!==========================================================================!

InputType: 1

SnapPath:   ../../rtcp-snapshots
SourcePath: ../../rtcp-snapshots

SpectraFile: ../data/spectra/thermal1e5.cdf
b2cdFile: ../data/column_depth/latmon_b2cd_table.txt
AtomicRatesFile: ../data/atomic_rates/atomic_rates_Hui.txt

ParFileBase: gadget_glass_L13.2_N64
SourceFileBase: test2_sources

StartSnapNum: 001
EndSnapNum: 001

ParFilesPerSnap: 1
SourceFilesPerSnap: 1

!=========================================================================!
! Raytracing                                                              !
!=========================================================================!

RayScheme: raynum
ForcedRayNumber: 1.e6

RayStats: true
BndryCond: 0

RecRayTol: 3.0d-1
RayPhotonTol: 1.0d-10

!=========================================================================!
! Ionization / Temperature Solving                                        !
!=========================================================================!

OnTheSpotH: true
OnTheSpotHe: true

HydrogenCaseA: true
HeliumCaseA: false

IonTempSolver: 1

Tfloor: 1.0d0
Tceiling: 1.0d9

xfloor: 0.0d0
xceiling: 1.0d0

NeBackGround: 1.0d-8

NraysUpdateNoHits: 10000000000
RecRaysPerSrcRay: 10000000000

!=========================================================================!
! Gas Composition  (what the ray sees)                                    !
!=========================================================================!

H_mf: 1.00d0
He_mf: 0.40d0

!===========================================================================!
! Output (all paths are relative to the executable and should not end in /) !
!===========================================================================!

OutputDir: ../../sphray_output/IT1_He
OutputFileBase: snap

OutputType: 1

OutputTiming: forced
NumStdOuts: 0

DoInitialOutput: true
IonFracOutRays: 10000

ForcedOutFile: ../../rtcp-snapshots/test1_output_times.txt
ForcedUnits: myr


!=========================================================================!
! Tree Building                                                           !
!=========================================================================!

PartPerCell: 12








